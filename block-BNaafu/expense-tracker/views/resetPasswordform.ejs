<%- include partials/header -%>

    <form action="/users/password" method="post" style="background-color: #5AB14F;" class="flex w-1/3   rounded-xl my-12 flex-col items-center justify-center container m-auto p-4">
        <p class="font-bold text-white text-l">Reset your password:- </p>
        <%if(error){%>
            <small class="text-red-500">
        <%=error%>
      </small>
            <%}%>
                <%if(update_password){%>
                    <small class="text-white-500">
            <%=update_password%>
          </small>
                    <%}%>
                        <input class="block w-full pr-5 pl-3 py-1 border-b-3 mt-3 rounded-md" type="password" placeholder="Add old password" name="old_password">
                        <input class="block w-full pr-5 pl-3 py-1 border-b-3 mt-3 rounded-md" type="password" placeholder="Add new password" name="new_password">
                        <input class="block w-full pr-5 pl-3 py-1 border-b-3 mt-3 rounded-md" type="password" placeholder="Confirm password" name="confirm_password">
                        <input class="block py-1 px-5 bg-black rounded-2xl mt-4 text-white hover:text-gray-400 border-b-3 mt-3 rounded-md" type="submit" value="Reset Password">
    </form>

    <%- include partials/footer -%>