<%- include partials/header -%>

    <form action="/users" method="post" style="background-color: #5AB14F;" class="flex w-1/3   rounded-xl my-12 flex-col items-center justify-center container m-auto p-4">
        <p class="font-bold text-white text-l">User Registeration</p>
        <%if(error){%>
            <small class="text-red-500">
        <%=error%>
      </small>
            <%}%>
                <input class="block w-full pr-5 pl-3 py-1 border-b-3 mt-3 rounded-md" type="text" placeholder="Add name" name="name">
                <input class="block w-full pr-5 pl-3 py-1 border-b-3 mt-3 rounded-md" type="email" placeholder="Add email" name="email">
                <input class="block w-full pr-5 pl-3 py-1 border-b-3 mt-3 rounded-md" type="password" placeholder="Add password" name="password">
                <input class="block w-full pr-5 pl-3 py-1 border-b-3 mt-3 rounded-md" type="number" placeholder="Add age" name="age">
                <input class="block w-full pr-5 pl-3 py-1 border-b-3 mt-3 rounded-md" type="number" placeholder="Add phone" name="phone">
                <input class="block w-full pr-5 pl-3 py-1 border-b-3 mt-3 rounded-md" type="text" placeholder="Add country" name="country">
                <input class="block py-1 px-5 bg-black rounded-2xl mt-4 text-white hover:text-gray-400 border-b-3 mt-3 rounded-md" type="submit" value="Register">
    </form>
    <%- include partials/footer -%>