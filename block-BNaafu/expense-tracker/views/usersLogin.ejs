<%- include partials/header -%>

    <form action="/users/login" method="post" style="background-color: #5AB14F;" class="flex w-1/3   rounded-xl my-12 flex-col items-center justify-center container m-auto p-4">
        <p class="font-bold text-white text-l">User Login</p>
        <%if(error){%>
            <small class="text-red-500">
                <%=error%>
            </small>
            <%}%>
                <input class="block w-full pr-5 pl-3 py-1 border-b-3 mt-3 rounded-md" type="email" placeholder="Add email" name="email">
                <input class="block w-full pr-5 pl-3 py-1 border-b-3 mt-3 rounded-md" type="password" placeholder="Add password" name="password">
                <input class="block py-1 px-5 bg-black rounded-2xl mt-4 text-white hover:text-gray-400 border-b-3 mt-3 rounded-md" type="submit" value="Login">
                <span><a class="block py-1 px-5 bg-black rounded-2xl  text-white hover:text-gray-400 border-b-3 mt-3 rounded-md"
                        href="/auth/github">Login via github</a></span>
                <span><a class="block py-1 px-5 bg-black rounded-2xl text-white hover:text-gray-400 border-b-3 mt-3 rounded-md"
                        href="/auth/google">Login via goggle</a></span>
    </form>

    <%- include partials/footer -%>